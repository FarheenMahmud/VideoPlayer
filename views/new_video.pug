doctype html
html
  head
    title Share New Video
  body
    h1 Share a New Video
    if error
      p(style="color:red") #{error}
    if success
      p(style="color:green") #{success}
    form(action="/video/new" method="POST")
      label(for="title") Title:
      input(type="text" name="title" required)
      br
      label(for="category") Category:
      input(type="text" name="category" required)
      br
      label(for="url") YouTube URL:
      input(type="url" name="url" required)
      br
      button(type="submit") Add Video
    p
      a(href="/video/dashboard/all") Back to Dashboard
